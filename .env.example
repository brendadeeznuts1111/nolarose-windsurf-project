# Environment Configuration Example
# Copy this file to .env and update with your values

# Server Configuration
PORT=3001
HOST=localhost

# NPM Publishing (for package maintainers)
# Get your token from: https://www.npmjs.com/settings/nolarose/tokens
npm_token=your_npm_token_here

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/windsurf

# Redis Configuration (for caching/sessions)
# REDIS_URL=redis://localhost:6379

# External API Keys
# FRAUD_API_KEY=your_api_key_here
# GEOLOCATION_API_KEY=your_geo_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Settings
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
ENABLE_REAL_TIME_MONITORING=true
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_BETA_FEATURES=false

# Performance Settings
MAX_CONCURRENT_SESSIONS=1000
CACHE_TTL=3600
BATCH_SIZE=100

# Development Settings
NODE_ENV=development
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=true
