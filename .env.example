# üèõÔ∏è FACTORY WAGER EMPIRE - Environment Configuration
# Copy this file to .env and update with your values

# Main Landing Page Server
LANDING_PORT=3222
HOST=localhost

# API Server Ports
CASH_APP_PORT=3223
FAMILY_CONTROLS_PORT=3224
SUSPENSION_RISK_PORT=3225
CROSS_FAMILY_PORT=3226

# DuoPlus Admin System Configuration
DUOPLUS_ADMIN_PORT=3227
DUOPLUS_API_HOST=localhost
DUOPLUS_DB_PATH=./data/duoplus.db

# KYC Configuration
DUOPLUS_KYC_PROVIDER=mock
DUOPLUS_KYC_API_KEY=your-kyc-api-key
DUOPLUS_KYC_WEBHOOK_SECRET=your-webhook-secret

# Lightning Network Configuration
DUOPLUS_LIGHTNING_ENDPOINT=https://api.lightning.network
DUOPLUS_LIGHTNING_MACAROON=your-macaroon-hex
DUOPLUS_LIGHTNING_CERT_PATH=./certs/lightning.pem

# S3 Configuration for APY Leaderboard Caching
DUOPLUS_S3_BUCKET=duoplus-cache
DUOPLUS_S3_REGION=us-east-1
DUOPLUS_S3_ACCESS_KEY=your-access-key
DUOPLUS_S3_SECRET_KEY=your-secret-key

# Security Configuration
DUOPLUS_JWT_SECRET=your-jwt-secret-here
DUOPLUS_JWT_EXPIRY=300
DUOPLUS_ADMIN_SESSION_TIMEOUT=3600

# Performance Configuration
DUOPLUS_CACHE_TTL=300
DUOPLUS_MAX_CONCURRENT_REBALANCING=5
DUOPLUS_APY_REFRESH_INTERVAL=60

# Logging Configuration
DUOPLUS_LOG_LEVEL=info
DUOPLUS_LOG_FILE=./logs/duoplus.log
DUOPLUS_AUDIT_RETENTION_DAYS=90

# Development/Production Settings
NODE_ENV=development
DUOPLUS_DEBUG=false
DUOPLUS_METRICS_ENABLED=true

# Bun-specific Configuration
BUN_CONFIG_VERBOSE_FETCH=0
BUN_RUNTIME_TRANSPILER_CACHE_PATH=./.bun-cache
DO_NOT_TRACK=1

# NPM Publishing (for package maintainers)
# Get your token from: https://www.npmjs.com/settings/nolarose/tokens
npm_token=your_npm_token_here

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/windsurf

# Redis Configuration (for caching/sessions)
# REDIS_URL=redis://localhost:6379

# External API Keys
# FRAUD_API_KEY=your_api_key_here
# GEOLOCATION_API_KEY=your_geo_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Settings
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
ENABLE_REAL_TIME_MONITORING=true
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_BETA_FEATURES=false
PREMIUM=true
FAMILY_CONTROLS=true
AI_RISK_PREDICTION=true
CROSS_FAMILY_NETWORKS=true
FINANCIAL_WARMING=true

# DuoPlus Feature Flags
DUOPLUS_ENABLE_AI_RISK_PREDICTION=true
DUOPLUS_ENABLE_FAMILY_CONTROLS=true
DUOPLUS_ENABLE_CASH_APP_PRIORITY=true

# Performance Settings
MAX_CONCURRENT_SESSIONS=1000
CACHE_TTL=3600
BATCH_SIZE=100

# Development Settings
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=true
