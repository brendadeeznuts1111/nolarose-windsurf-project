# Production Environment Configuration
# Copy to .env.production and customize for production deployment

# Environment
NODE_ENV=production

# DuoPlus Admin System - Production
DUOPLUS_ADMIN_PORT=3227
DUOPLUS_API_HOST=0.0.0.0
DUOPLUS_DB_PATH=/app/data/duoplus.db

# Database Encryption (Required for Production)
DUOPLUS_DB_ENCRYPTION_KEY=your-256-bit-encryption-key-here

# KYC Configuration - Production (Real Provider)
DUOPLUS_KYC_PROVIDER=veriff
DUOPLUS_KYC_API_KEY=your-real-kyc-api-key
DUOPLUS_KYC_WEBHOOK_SECRET=your-real-webhook-secret

# Lightning Network - Production (Real LND)
DUOPLUS_LIGHTNING_ENDPOINT=https://your-lnd-node:8080
DUOPLUS_LIGHTNING_MACAROON=your-real-macaroon-hex
DUOPLUS_LIGHTNING_CERT_PATH=/app/certs/lightning.pem

# S3 Configuration - Production (Real AWS)
DUOPLUS_S3_BUCKET=duoplus-production-cache
DUOPLUS_S3_REGION=us-west-2
DUOPLUS_S3_ACCESS_KEY=your-aws-access-key
DUOPLUS_S3_SECRET_KEY=your-aws-secret-key

# Security Configuration - Production (High Security)
DUOPLUS_JWT_SECRET=your-super-secure-jwt-secret-256-bits
DUOPLUS_JWT_EXPIRY=300
DUOPLUS_ADMIN_SESSION_TIMEOUT=1800

# Performance Configuration - Production (Optimized)
DUOPLUS_CACHE_TTL=300
DUOPLUS_MAX_CONCURRENT_REBALANCING=10
DUOPLUS_APY_REFRESH_INTERVAL=60

# Logging Configuration - Production (Structured)
DUOPLUS_LOG_LEVEL=warn
DUOPLUS_LOG_FILE=/app/logs/duoplus.log
DUOPLUS_AUDIT_RETENTION_DAYS=2555  # 7 years for compliance

# Production Settings
DUOPLUS_DEBUG=false
DUOPLUS_METRICS_ENABLED=true

# Bun Configuration - Production (Optimized)
BUN_CONFIG_VERBOSE_FETCH=0
BUN_RUNTIME_TRANSPILER_CACHE_PATH=/app/cache/.bun-cache
DO_NOT_TRACK=1
NO_COLOR=1

# Feature Flags - Production (Controlled Rollout)
DUOPLUS_ENABLE_AI_RISK_PREDICTION=true
DUOPLUS_ENABLE_FAMILY_CONTROLS=true
DUOPLUS_ENABLE_CASH_APP_PRIORITY=true

# External Services - Production
DATABASE_URL=postgresql://user:password@postgres:5432/duoplus
REDIS_URL=redis://redis:6379/0

# SSL/TLS Configuration
NODE_TLS_REJECT_UNAUTHORIZED=0
SSL_CERT_PATH=/app/certs/server.crt
SSL_KEY_PATH=/app/certs/server.key

# Monitoring and Observability
SENTRY_DSN=your-sentry-dsn-here
DATADOG_API_KEY=your-datadog-key
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Rate Limiting
DUOPLUS_API_RATE_LIMIT=1000
DUOPLUS_LOGIN_RATE_LIMIT=10
DUOPLUS_KYC_RATE_LIMIT=50

# Backup Configuration
BACKUP_S3_BUCKET=duoplus-backups
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=90
