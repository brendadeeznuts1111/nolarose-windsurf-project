# Development Environment Configuration
# Copy to .env.development and customize for local development

# Environment
NODE_ENV=development

# DuoPlus Admin System - Development
DUOPLUS_ADMIN_PORT=3227
DUOPLUS_API_HOST=localhost
DUOPLUS_DB_PATH=./data/duoplus-dev.db

# KYC Configuration - Development (Mock Provider)
DUOPLUS_KYC_PROVIDER=mock
DUOPLUS_KYC_API_KEY=dev-key-placeholder
DUOPLUS_KYC_WEBHOOK_SECRET=dev-webhook-secret

# Lightning Network - Development (Mock)
DUOPLUS_LIGHTNING_ENDPOINT=https://api-mock.lightning.network
DUOPLUS_LIGHTNING_MACAROON=dev-macaroon-placeholder
DUOPLUS_LIGHTNING_CERT_PATH=./certs/lightning-dev.pem

# S3 Configuration - Development (LocalStack or Mock)
DUOPLUS_S3_BUCKET=duoplus-dev-cache
DUOPLUS_S3_REGION=us-east-1
DUOPLUS_S3_ACCESS_KEY=dev-access-key
DUOPLUS_S3_SECRET_KEY=dev-secret-key

# Security Configuration - Development (Less Secure)
DUOPLUS_JWT_SECRET=dev-jwt-secret-not-for-production
DUOPLUS_JWT_EXPIRY=3600
DUOPLUS_ADMIN_SESSION_TIMEOUT=7200

# Performance Configuration - Development (Relaxed)
DUOPLUS_CACHE_TTL=60
DUOPLUS_MAX_CONCURRENT_REBALANCING=2
DUOPLUS_APY_REFRESH_INTERVAL=30

# Logging Configuration - Development (Verbose)
DUOPLUS_LOG_LEVEL=debug
DUOPLUS_LOG_FILE=./logs/duoplus-dev.log
DUOPLUS_AUDIT_RETENTION_DAYS=7

# Development Settings
DUOPLUS_DEBUG=true
DUOPLUS_METRICS_ENABLED=true

# Bun Configuration - Development
BUN_CONFIG_VERBOSE_FETCH=1
BUN_RUNTIME_TRANSPILER_CACHE_PATH=./.bun-cache-dev
BUN_CONFIG_NO_CLEAR_TERMINAL_ON_RELOAD=false

# Feature Flags - Development (All Enabled)
DUOPLUS_ENABLE_AI_RISK_PREDICTION=true
DUOPLUS_ENABLE_FAMILY_CONTROLS=true
DUOPLUS_ENABLE_CASH_APP_PRIORITY=true

# External Service Overrides (for local development)
# MOCK_EXTERNAL_APIS=true
