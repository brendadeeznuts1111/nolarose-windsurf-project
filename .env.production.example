# DuoPlus Production Environment Variables
# Copy this file to .env.production and fill in actual values
# DO NOT commit .env.production to git

# Server Configuration
DUOPLUS_ADMIN_PORT=3227
DUOPLUS_API_HOST=api.duoplus.com
DUOPLUS_DB_PATH=/var/lib/duoplus/production.db

# KYC Provider (REQUIRED in production - cannot be "mock")
# Options: chainalysis, jumio, onfido, persona
DUOPLUS_KYC_PROVIDER=chainalysis
DUOPLUS_KYC_API_KEY=kyc_live_xxx
DUOPLUS_KYC_WEBHOOK_SECRET=webhook_secret_xxx

# Lightning Network (REQUIRED in production)
DUOPLUS_LIGHTNING_ENDPOINT=https://lnd.duoplus.production:8080
DUOPLUS_LIGHTNING_MACAROON_PATH=/secure/lnd/admin.macaroon
DUOPLUS_LIGHTNING_CERT_PATH=/secure/lnd/tls.cert

# S3 Configuration (REQUIRED in production)
DUOPLUS_S3_BUCKET=duoplus-logs-production
DUOPLUS_S3_REGION=us-east-1
DUOPLUS_S3_ACCESS_KEY=aws_access_key_xxx
DUOPLUS_S3_SECRET_KEY=aws_secret_key_xxx

# Security (REQUIRED in production)
DUOPLUS_JWT_SECRET=change-this-to-a-random-32-character-secret-minimum
DUOPLUS_JWT_EXPIRY=300
DUOPLUS_ADMIN_SESSION_TIMEOUT=3600

# Cash App Green
CASHAPP_ACCOUNT_ID=cashapp_account_id_xxx
CASHAPP_ACCESS_TOKEN=CA_live_xxx
CASHAPP_WEBHOOK_SECRET=cashapp_webhook_secret_xxx

# Monitoring (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# Performance
DUOPLUS_CACHE_TTL=300
DUOPLUS_MAX_CONCURRENT_REBALANCING=5
DUOPLUS_APY_REFRESH_INTERVAL=60

# Logging
DUOPLUS_LOG_LEVEL=info
DUOPLUS_LOG_FILE=/var/log/duoplus/production.log
DUOPLUS_AUDIT_RETENTION_DAYS=90

# Feature Flags
DUOPLUS_ENABLE_AI_RISK_PREDICTION=true
DUOPLUS_ENABLE_FAMILY_CONTROLS=true
DUOPLUS_ENABLE_CASH_APP_PRIORITY=true

# Environment
NODE_ENV=production
DUOPLUS_DEBUG=false
DUOPLUS_METRICS_ENABLED=true
